<Window x:Class="AudioStreaming.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AudioStreaming : Client" Height="344" Width="298" ResizeMode="NoResize" Closed="CloseApp">
    <Grid ShowGridLines="True">
        <Button x:Name="btConnect" Content="Connect!" HorizontalAlignment="Left" Margin="40,100,0,0" VerticalAlignment="Top" Width="75" Click="btConnect_Click" IsEnabled="{Binding Path=enableControls}"/>
        <CheckBox x:Name="cbCompress" Content="Compress Data" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="27,70,0,0" IsChecked="True" IsEnabled="{Binding Path=enableControls}"/>
        <TextBox x:Name="txbHostname" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="111,28,0,0" Text="127.0.0.1" IsEnabled="{Binding Path=enableControls}"/>
        <Label x:Name="lbHost" Content="Hostname :" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="25,28,0,0" Height="23" RenderTransformOrigin="0.8,0.522"/>
        <CheckBox x:Name="cbMp3Mode" Content="Mp3Connect" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="144,70,0,0" Width="90" IsChecked="True" Checked="CheckBoxChanged" Unchecked="CheckBoxChanged" IsEnabled="{Binding Path=enableControls}" />
        <Button x:Name="btKillConnection" Content="Kill Connection" IsEnabled="{Binding Path=ThreadAlive}" HorizontalAlignment="Left" Margin="144,100,0,0" VerticalAlignment="Top" Width="89" RenderTransformOrigin="0.12,-0.773" Click="Disconnect"/>
        <Slider x:Name="slVolume" HorizontalAlignment="Right" VerticalAlignment="Top" RenderTransformOrigin="3.5,3.455" Margin="0,204,58,0" Width="206" Maximum="100" Value="{Binding Volume}"/>
        <ProgressBar x:Name="pbBuffer" HorizontalAlignment="Left" Height="18" Margin="25,278,0,0" VerticalAlignment="Top" Width="208" Value="{Binding BufferLenght, BindsDirectlyToSource=True, Mode=TwoWay, NotifyOnTargetUpdated=True, NotifyOnSourceUpdated=True}"/>
        <Label x:Name="lbBuffer" Content="Buffer" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="25,247,0,0" Width="75"/>
        <Label x:Name="lbVolume" Content="Volume" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="28,164,0,0"/>
    </Grid>
</Window>
